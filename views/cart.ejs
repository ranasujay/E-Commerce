<%- include('./partials/header') %>

    <% var totalamount = 0, totaldiscount = 0, platformFee = 0 %>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-3 px-10 py-10"> <!-- Reduced gap and padding -->
        <% user.cart.forEach(function(item){ %>
            <div class="px-1 py-1">
                <div class="rounded-md overflow-hidden">
                    <div class="w-full h-48 bg-[<%=item.bgcolor%>] flex items-center justify-center"> <!-- Reduced height -->
                        <img class="h-[10rem]" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt=""> <!-- Smaller image -->
                    </div>
                    <div class="w-full flex justify-between px-3 py-2 bg-[<%=item.bgcolor%>]"> <!-- Reduced padding -->
                        <h3 class="text-lg"><%=item.name%></h3> <!-- Smaller text -->
                        <div class="flex items-center gap-1 bg-[<%item.panelcolor%>]"> <!-- Reduced gap -->
                            <i class="w-5 h-5 bg-white flex rounded-full items-center justify-center ri-add-line"></i> <!-- Smaller icon -->
                            <div class="px-1 py-1 rounded-md bg-white text-black text-xs">01</div> <!-- Smaller text and padding -->
                            <i class="w-5 h-5 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i> <!-- Smaller icon -->
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-3 py-2 bg-[<%=item.panelcolor%>] text-[<%=item.textcolor%>]">
                        <h4 class="text-xs">Amount</h4> <!-- Smaller text -->
                        <h2 class="text-xs">₹ <%=item.price%></h2> <!-- Smaller text -->
                        
                        <h4 class="text-xs">Discount</h4> <!-- Smaller text -->
                        <h4 class="text-xs">₹ <%= item.discount%></h4> <!-- Smaller text -->
                    </div>
                </div>
            </div>
            <% platformFee = 20%>
            <% totalamount += item.price%>
            <% totaldiscount += item.discount%>
        <% }) %>
    </div>
    

    <div class="flex justify-center mt-10">  
        <div class="w-[50%]">
            <h3 class="text-2xl font-semibold mb-4">Price Breakdown</h3>
            <div class="px-10 mt-5 space-y-4">
                <div class="flex justify-between">
                    <h4 class="w-1/2 text-gray-600">Total MRP</h4>
                    <h4>₹ <%= totalamount %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="w-1/2 text-gray-600">Discount on MRP</h4>
                    <h4>₹ (-)<%= totaldiscount %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="w-1/2 text-gray-600">Platform Fee</h4>
                    <h4>₹ <%= platformFee %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="w-1/2 text-gray-600">Shipping Fee</h4>
                    <h4 class="text-green-600">FREE</h4>
                </div>
            </div>
    
            <div class="w-full h-[1px] bg-gray-300 mt-8"></div>
    
            <!-- Total Amount and Order Now -->
            <div class="flex justify-between items-center mt-4">
                <!-- Total Amount -->
                <div class="flex w-1/2">
                    <h3 class="text-2xl font-semibold">Total Amount</h3>
                </div>
                <!-- Total Amount Value -->
                <h3 class="mr-5 text-2xl font-bold text-green-600 w-1/2 text-right">₹ <%= totalamount - totaldiscount + platformFee %></h3>
            </div>
    
            <div class="flex justify-end mt-4">
                <!-- Order Now Button -->
                <%if(platformFee!=0){%>
                <a href="" class="px-6 py-3 bg-green-500 text-white font-bold rounded-md hover:bg-green-600 transition duration-300">
                    Order Now
                </a>
                <% } %>
            </div>
    
            <div class="w-full h-[1px] bg-gray-300 mt-6 mb-5"></div>
        </div>
    </div>
    
    
    
    
    <%- include('./partials/footer') %>